{
  "name": "pots",
  "version": "0.1.0",
  "description": "Budgeting across multiple pots.",
  "repository": {
    "type": "git",
    "url": "https://github.com/jneidel/pots.git"
  },
  "author": {
    "name": "Jonathan Neidel",
    "email": "git@jneidel.com",
    "url": "https://jneidel.com"
  },
  "bin": {
    "pots": "./bin/run"
  },
  "scripts": {
    "start": "npm run build",
    "test": "jest --coverage",
    "build": "tsc",
    "watch": "concurrently -k -n \"ðŸ”¨,ðŸš€\" \"npm run watch-build\" \"npm run watch-test\" --prefix name",
    "watch-build": "tsc -w",
    "watch-test": "jest --watch",
    "watch-start": "find dist | entr -cr ./bin/run",
    "lint": "eslint --fix --ext .ts --parser-options \"{ 'ecmaVersion': 10, 'ecmaFeatures': { 'impliedStrict': true }, project: ./tsconfig.json }\" src test",
    "lint:nofix": "eslint --ext .ts --parser-options \"{ 'ecmaVersion': 10, 'ecmaFeatures': { 'impliedStrict': true }, project: ./tsconfig.json }\" src test"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/LICENCE",
    "/README.md"
  ],
  "license": "GPLv3",
  "engines": {
    "node": ">=18"
  },
  "volta": {
    "node": "18.16.1"
  },
  "dependencies": {
    "@oclif/core": "^2.1.7",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-not-found": "^2.3.15",
    "@oclif/plugin-warn-if-update-available": "^2.0.19",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "inquirer": "^8.2.5",
    "realm": "^11.10.1",
    "sugar": "^2.0.6"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.5",
    "@types/jest": "^27.0.3",
    "@types/node": "^20.4.8",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "eslint": "^8.30.0",
    "eslint-plugin-diff": "^2.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "oclif": {
    "bin": "pots",
    "dirname": "pots",
    "commands": "./dist/src/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available",
      "@oclif/plugin-not-found"
    ],
    "warn-if-update-available": {
      "timeoutInDays": 7,
      "message": "An update for <%= config.name %> is available (<%= chalk.yellow(config.version) %> => <%= chalk.greenBright(latest) %>).\nInstall with: sudo npm install -g <%= config.name %>"
    },
    "topics": {
      "plugins": {
        "hidden": true
      },
      "trans": {
        "description": "Manage transactions."
      }
    },
    "topicSeparator": " ",
    "additionalHelpFlags": [
      "-h",
      "help"
    ],
    "additionalVersionFlags": [
      "-v",
      "-V",
      "version",
      "-version"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
